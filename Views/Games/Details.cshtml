@model Highscore.Models.ViewModels.GameDetailsViewModel

<section class="row mb-4 mt-5">
    <div class="col-7">
        <h1 class="mb-3">@Model.Game.Name</h1>
        <div class="mb-3 small text-secondary">@Model.Game.LaunchYear, @Model.Game.Genre</div>
        <div class="mb-3">@Model.Game.Description</div>
    </div>
    <div class="col-5">
        <img src="@Model.Game.ImageUrl" style="max-width: 100%" alt="" />
    </div>
</section>

<partial name="_Highscores" model="Model.HighScores">