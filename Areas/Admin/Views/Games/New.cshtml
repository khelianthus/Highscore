@model Highscore.Areas.Admin.Models.ViewModel.CreateGameViewModel

@{
    ViewData["Title"] = "New";
}

<h1>Nytt spel</h1>

<div class="row ">
    <div class="col-md-4 my-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Titel</label>
                <input asp-for="Name" class="form-control mb-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Beskrivning</label>
                    @*                <input asp-for="Description" class="form-control" />
                    *@                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="control-label">Bild URL</label>
                    <input asp-for="ImageUrl" class="form-control mb-2" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <!--STUDERA NEDAN-->
                <div class="col-md-4 my-4">
                    <label asp-for="Genre" class="control-label">Genre</label>
                    <select asp-items="@(new SelectList(Model.Genres))"
                            class="form-control mb-2"
                            asp-for="Genre">
                        <option value="">-- Välj genre --</option>
                    </select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-4 my-4">
                <label asp-for="LaunchYear" class="control-label">År</label>
                <input asp-for="LaunchYear" class="form-control mb-2" />
                <span asp-validation-for="LaunchYear" class="text-danger mb-1"></span>
            </div>
            <div class="col-md-4 my-4">
                <input type="submit" value="Lägg till" class="btn btn-primary mt-3 mb-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till start</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}